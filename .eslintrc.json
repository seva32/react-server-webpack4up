{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "webpack": { "config": "./webpack/webpack.prod.config.js" }
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "no-unused-vars": [
      "error",
      { "vars": "local", "args": "after-used", "argsIgnorePattern": "^_" }
    ],
    "no-confusing-arrow": 0,
    "global-require": 0,
    "arrow-parens": ["as-needed"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
